---
import GuideColor from "./_GuideColor.astro";

const primaryColors = ["#091432", "#28a4e4", "#337ad3", "#183477", "#222222", "#444444", "#777777", "#999999"];
const secondaryColors = ["#333333", "#aaaaaa", "#cccccc", "#e1e1e1", "#f4f4f4", "#d1e7f3", "#ebf3f7", "#ffffff", "#f14469"];
---

<div class="py-20 border-b">
    <h2 class="font-sans text-4xl font-bold">Color Palette</h2>

    <!-- Primary colors -->
    <div class="my-10">
        <h3 class="text-2xl text-gray-500">Primary colors</h3>
        <div class="flex mt-5 space-x-2">
            {primaryColors.map((color) => <GuideColor color={color} />)}
        </div>
    </div>

    <!-- Secondary colors -->
    <div class="mt-32">
        <h3 class="text-2xl text-gray-500">Secondary colors</h3>
        <div class="flex mt-5 space-x-2">
            {secondaryColors.map((color) => <GuideColor color={color} />)}
        </div>
    </div>
</div>
